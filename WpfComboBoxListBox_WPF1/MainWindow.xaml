<Window x:Class="WpfComboBoxListBox_WPF1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfComboBoxListBox_WPF1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ComboBox Name="ComboBox1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox1_SelectionChanged">
            <ComboBoxItem Content="Stavka1"/>
            <ComboBoxItem Content="Stavka2"/>
            <ComboBoxItem Content="Stavka3"/>
            <ComboBoxItem Content="Stavka4"/>
        </ComboBox>

        <Button Content="Resetuj" HorizontalAlignment="Left" Margin="172,12,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <TextBlock Name="TextBlock1" HorizontalAlignment="Left" Margin="10,90,0,0" TextWrapping="Wrap" Text="info" VerticalAlignment="Top"/>
        <TextBox Name="TextBox1" HorizontalAlignment="Left" Height="23" Margin="10,150,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" KeyDown="TextBox1_KeyDown"/>

    </Grid>
</Window>
